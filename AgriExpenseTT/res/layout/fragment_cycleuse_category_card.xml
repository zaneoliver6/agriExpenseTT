<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:background="#ffffff"
    android:orientation="vertical" >
    
    				<TextView
                        android:id="@+id/tv_cycle_catMain"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
            			android:layout_height="wrap_content"
			            android:textColor="@color/primary_text"
			            android:textStyle="bold"
			            android:layout_gravity="fill"
			            android:textSize="20sp"
                        android:text="TextView" />

					<View
					    android:id="@+id/line"
					    android:layout_width="match_parent"
					    android:layout_height="2dp"
					    android:background="@android:color/darker_gray"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp" />

                    <TextView
                        android:id="@+id/tv_cycle_catDet1"
                         android:layout_marginLeft="10dp"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
	                    android:textColor="@color/primary_text"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/tv_cycle_catDet2"
                         android:layout_marginLeft="10dp"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
	                    android:textColor="@color/primary_text"
                        android:text="No main expense yet" />

                    <Button
                        android:id="@+id/btn_Cycle_useage"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="7dp"
                        android:background="#4ddedede"
                        android:text="Category Useage"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp" />

					<Button
					    android:id="@+id/btn_Cycle_useMore"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="2dp"
					    android:background="#4ddedede"
					    android:text="Use More Category"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="2dp" />
    

</LinearLayout>
