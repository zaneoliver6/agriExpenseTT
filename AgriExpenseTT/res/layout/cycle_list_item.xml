<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cycle_list_cont"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/icon_purchaseType"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/crop_under_rain_solid"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_cycleList_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/label_item_details_bottom_margin"
            android:layout_marginLeft="@dimen/lable_item_details_left_margin"
            android:layout_marginTop="7dp"
            android:text="Name: "
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_list_head"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="@dimen/label_item_details_bottom_margin"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/tv_cycleList_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/secondary_text"
            android:layout_marginLeft="@dimen/lable_item_details_left_margin"
            android:layout_marginBottom="@dimen/label_item_details_bottom_margin"
            android:textSize="@dimen/text_size_list" />

        <TextView
            android:id="@+id/tv_cycleList_Land"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/secondary_text"
            android:layout_marginLeft="@dimen/lable_item_details_left_margin"
            android:layout_marginBottom="@dimen/label_item_details_bottom_margin"
            android:textSize="@dimen/text_size_list" />

        <TextView
            android:id="@+id/tv_cycleList_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/secondary_text"
            android:layout_marginLeft="@dimen/lable_item_details_left_margin"
            android:layout_marginBottom="@dimen/label_item_details_bottom_margin"
            android:textSize="@dimen/text_size_list" />

        <TextView
            android:id="@+id/tv_cycleList_harvest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/secondary_text"
            android:layout_marginLeft="@dimen/lable_item_details_left_margin"
            android:layout_marginBottom="@dimen/label_item_details_bottom_margin"
            android:textSize="@dimen/text_size_list" />

    </LinearLayout>




</LinearLayout>
