<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_newcycle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uwi.dcit.AgriExpenseTT.ReportManager$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mainNew_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="25dp"
                android:text="@string/txt_reports_title"
                android:textColor="#999999"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/tv_mainNew_subheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/txt_reports_subtitle"
                android:textColor="#999999"
                android:textSize="16sp" />
        </LinearLayout>
     

        <FrameLayout
            android:id="@+id/reportListContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp" 
            android:layout_weight="3.70">
        </FrameLayout>

        <FrameLayout
            android:id="@+id/reportControlsContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <Button
		        android:id="@+id/btn_addReport"
		        android:layout_width="418dp"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20dp"
		        android:layout_marginStart="20dp"
		        android:layout_marginTop="20dp"
		        android:background="@drawable/btn_custom"
		        android:text="@string/btn_reports_new"
                android:layout_gravity="center_horizontal|bottom" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>