<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff">

    <TextView
        android:id="@+id/tv_cycUseItem_head1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        android:textStyle="bold"
        android:layout_gravity="fill"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="7dp"
        android:textSize="16sp"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_cycUseItem_sub1_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/primary_text"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_cycUseItem_sub1_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="14dp"
            android:text="TextView"
            android:textSize="13sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_cycUseItem_head2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textColor="@color/secondary_text"
        android:textStyle="bold"
        android:layout_gravity="fill"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="7dp"
        android:textSize="16sp"
        android:text="TextView"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_cycUseItem_sub2_1"
           android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="14dp"
            android:text="TextView"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_cycUseItem_sub2_2"
            android:layout_width="0dp"
            android:layout_weight="1" 
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="14dp"
            android:text="TextView"
            android:textSize="13sp"/>

    </LinearLayout>

</LinearLayout>
