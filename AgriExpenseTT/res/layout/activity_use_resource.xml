<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_useResource"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uwi.dcit.AgriExpenseTT.UseResource"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:id="@+id/cont_UseResource_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/UseExpenseHeader"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_pItem_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="10dp"
                android:text="Using resources in crop cycle"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_size_helpscreen"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />
        </LinearLayout>


        <FrameLayout
            android:id="@+id/useExpenseFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </FrameLayout>
       
    </LinearLayout>

</FrameLayout>
